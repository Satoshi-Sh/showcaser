<!DOCTYPE html>
<html lang="en">
  <%- include('head', { title: 'Upload Project' }) %>
  <body>
    <%- include('header') %>
    <div class="account-page">
      <form class="account-board" action="/upload" method="POST" enctype="multipart/form-data">
        <h1>Upload Project</h1>
        <div class="input-div">
          <label for="title">Title</label>
          <input
            type="text"
            id="title"
            name="title"
            placeholder="title"
            required
          />
        </div>
        <div class="input-div">
          <label for="repo">Github repositry url</label>
          <input
            type="text"
            id="repo"
            name="repo"
            placeholder="https://username/reponame"
            required
          />
        </div>
          <div class="input-div">
            <label for="pageUrl">Page URL</label>
            <input
              type="text"
              id="pageUrl"
              name="pageUrl"
              placeholder="optional..."
            />
          </div>
          <div class="textarea-div">
            <label for="description">Description</label>
            <textarea id="description" name="description" cols="40" rows="15" required></textarea>
          </div>
          <div class="imageupload-div">
            <label for="imageUpload">Choose Project Image (JPEG, PNG)</label>
            <input type="file" id="imageUpload" name="imageUpload" accept=".jpg,.jpeg,.png" required>
          </div>
          <input type="submit">
        </form>
      </div>
    </div>
  </body>
</html>