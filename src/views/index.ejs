<!DOCTYPE html>
<html>
  <%- include('head', { title: 'Home' }) %>

  <body>
    <%- include('header') %>
    <div class="background-container"></div>
    <div class="heading-div">
      <h1>Showcaser</h1>
      <p>
        Showcasing students<br />
        projects
      </p>
    </div>

    <div class="cities-board">
      <div class="title-div">
        <h1 class="center">Cities</h1>
      </div>
      <% Object.entries(cities).forEach(([city, counts]) => { %>
      <div class="city-board">
        <h2><%= city %></h2>
        <h3><%= counts %></h3>
      </div>
      <% }) %>
    </div>

    <div class="courses-board">
      <div class="title-div">
        <h1 class="center">Courses</h1>
      </div>
      <% Object.entries(courses).forEach(([course, counts]) => { %>
      <div class="course-board">
        <h2><%= course %></h2>
        <h3><%= counts %></h3>
      </div>
      <% }) %>
    </div>
    <div class="link-div">
      <a href="/users">Users Page</a>
    </div>
  </body>
</html>
