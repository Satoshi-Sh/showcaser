<!DOCTYPE html>
<html>
  <head>
    <title>Registered Users</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>

  <body>
    <%- include('header') %>
    <h1 class="center">Registered Users</h1>
    <div class="users-board">
      <% for (let user of users) { %>
      <div class="user-board" id="<%= user.id %>" onclick="handleClick(event)">
        <h2 id="<%= user.id %>"><%= user.displayname %></h2>
        <img
          src="<%= user.avatar_path %>"
          alt="Avatar"
          class="avatar"
          id="<%= user.id %>"
        />
        <p id="<%= user.id %>"><%=user.shortendDesc %></p>
      </div>
      <% } %>
    </div>
    <script>
      function handleClick(event) {
        window.location.href = `/user/${event.target.id}`;
      }
    </script>
  </body>
</html>
