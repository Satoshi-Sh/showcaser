<!DOCTYPE html>
<html>
  <head>
    <title>Projects</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>

  <body>
    <%- include('header') %>
    <h1 class="center">Projects of <%= user.displayname %></h1>
    <article class="projects-board">
      <% if (!projects) { %>
      <h2 class="center">No posting yet...</h2>
      <% } else { %> <% for (let project of projects) { %>
      <div class="project-board" id="<%= project.id %>">
        <h2><%= project.title %></h2>
        <div class="image-container">
          <img
            src="<%= project.image_path %>"
            alt="<%= project.alt %>"
            class="project-img"
          />
        </div>
        <div class="categories">
          <% for (let category of project.categories) { %> #<%= category %> <% }
          %>
        </div>
        <p><%= project.content %></p>
        <footer class="project-footer">
          Created by <%= user.displayname %>
          <img src="<%= user.avatar_path %>" alt="Avatar" class="mini-avatar" />
        </footer>
      </div>
      <% } %> <% } %>
    </article>
    <div class="link-div">
      <a href="/users">Back to User Page</a>
    </div>
  </body>
</html>
