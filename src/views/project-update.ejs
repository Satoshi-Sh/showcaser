<!DOCTYPE html>
<html lang="en">
  <%- include('head', { title: 'Update Project' }) %>
  <body>
    <%- include('header') %>
    <div class="account-page">
      <form class="account-board" action="/update/:project-id" method="POST" enctype="multipart/form-data">
        <h1>Update Project</h1>
        <div class="input-div">
          <label for="title">Title</label>
          <input
            type="text"
            id="title"
            name="title"
            placeholder="title"
            value="<%= project.title %>"
            required
          />
        </div>
          <div class="input-div">
            <label for="categories">categories</label>
            <input
              type="text"
              id="categories"
              name="categories"
              placeholder="categories"
              value="<%= project.categories %>"
              required
            />
          </div>
          <div class="textarea-div">
            <label for="description">Description</label>
            <textarea id="description" name="description" cols="40" rows="15" required><%= project.content %></textarea>
          </div>
          <div class="imageupload-div">
            <label for="imageUpload">Add Image(JPEG, PNG) if you like to change</label>
            <input type="file" id="imageUpload" name="imageUpload" accept=".jpg,.jpeg,.png" required>
          </div>
          <input type="submit">
        </form>
      </div>
    </div>
  </body>
</html>