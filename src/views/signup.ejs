<!DOCTYPE html>
<html lang="en">
  <%- include('head', { title: 'Signup' }) %>
  <body>
    <%- include('header') %>
    <div class="account-page">
      <form class="account-board" action="/signup" method="POST" enctype="multipart/form-data">
        <h1>Signup</h1>
        <div class="input-div">
          <label for="displayname">Display Name</label>
          <input
            type="text"
            id="displayname"
            name="displayname"
            placeholder="displayname"
            value="<%= displayname %>"
            required
          />
        </div>
          <div class="input-div">
            <label for="username">Username</label>
            <input
              type="text"
              id="username"
              name="username"
              placeholder="github username"
              required
            />
          </div>
          <div class="input-div">
            <label for="password">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              placeholder="password"
              required
            />
          </div>
          <div class="input-div"><label for="confirmPassword">Confirm Password</label>
            <input type="password" id="confirmPassword" name="confirmPassword" placeholder="confirmation" required>
          </div>
          <div class="input-div">
            <label for="city">City</label>
            <select name="city" id="city">
              <option value="Saskatoon">Saskatoon</option>
              <option value="Edmonton">Edmonton</option>
              <option value="Winnipeg">Winnipeg</option>
              <option value="Calgary">Calgary</option>
              <option value="Regina">Regina</option>
              <option value="Eeatern Canada">Eastern Canada</option>
            </select>
          </div>
          <div class="input-div">
            <label for="course">Course</label>
            <select name="course" id="course">
              <option value="Vue.js">Vue.js</option>
              <option value="Node.js">Node.js</option>
              <option value="Ruby">Ruby</option>
              <option value="Java">Java</option>
              <option value="Python">Python</option>
              <option value="React.js">React.js</option>
            </select>
          </div>
          
          <div class="imageupload-div">
            <label for="imageUpload">Select an Avatar (JPEG, PNG)</label>
            <input type="file" id="imageUpload" name="imageUpload" accept=".jpg,.jpeg,.png">
          </div>
          <input type="submit">
          <% if (errorMessage) { %>
            <p id="error-message"><%= errorMessage %></p>
          <% } %>
        </form>
      </div>
    </div>
    <script>
      const passwordInput = document.getElementById('password');
      const confirmPasswordInput = document.getElementById('confirmPassword');
  
      confirmPasswordInput.addEventListener('input', () => {
        if (confirmPasswordInput.value !== passwordInput.value) {
          confirmPasswordInput.setCustomValidity("Passwords do not match");
        } else {
          confirmPasswordInput.setCustomValidity('');
        }
      });
    </script>
  </body>
</html>
